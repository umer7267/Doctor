<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fillViewport="true"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingEnd="15dp"
                android:paddingStart="0dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_arrow_back"/>

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/back"
                android:weightSum="2"
                android:gravity="center">

                <Button
                    android:id="@+id/doctor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg_outline"
                    android:text="I'm a Doctor"
                    android:textColor="@color/colorAccent"
                    android:paddingStart="20dp"
                    android:layout_weight="1"
                    android:paddingEnd="20dp"
                    android:layout_marginEnd="5dp"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/patient"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg_outline"
                    android:text="I'm a Patient"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_weight="1"
                    android:layout_toEndOf="@id/doctor"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttons"
                android:layout_marginTop="15dp"
                android:visibility="visible">

                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:hint="First Name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:drawableStart="@drawable/ic_user"
                    android:paddingStart="10dp"
                    android:drawablePadding="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/colorAccent" />

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:layout_below="@id/first_name"
                    android:hint="Last Name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:drawableStart="@drawable/ic_user"
                    android:paddingStart="10dp"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/colorAccent" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bg"
                        android:hint="Email"
                        android:layout_below="@id/last_name"
                        android:inputType="text"
                        android:layout_marginTop="10dp"
                        android:maxLines="1"
                        android:drawableStart="@drawable/ic_email"
                        android:paddingStart="10dp"
                        android:drawablePadding="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent" />

                <LinearLayout
                    android:id="@+id/country_phone"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/email"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/country"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bg"
                        android:hint="Country"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="15dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:layout_weight=".8"
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"/>

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bg"
                        android:hint="Phone"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="15dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1.2"
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/password_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/country_phone"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bg"
                        android:gravity="center_vertical"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:drawableStart="@drawable/ic_password"
                        android:paddingStart="10dp"
                        android:drawablePadding="10dp"
                        android:paddingTop="10dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent" />

                    <ImageView
                        android:id="@+id/view_password"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_view"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/confirm_pass_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/password_holder"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bg"
                        android:gravity="center_vertical"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:drawableStart="@drawable/ic_password"
                        android:paddingStart="10dp"
                        android:drawablePadding="10dp"
                        android:paddingTop="10dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent" />

                    <ImageView
                        android:id="@+id/view_confirm_password"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_view"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <Button
                    android:id="@+id/sign_up_btn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/confirm_pass_holder"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/btn_bg"
                    android:text="Register"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>